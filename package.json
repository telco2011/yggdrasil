{
  "name": "yggdrasil-arch",
  "version": "0.1.0",
  "description": "@yggdrasil architecture.",
  "license": "MIT",
  "author": "David Lopez",
  "scripts": {
    "build": "npm run clean:lib && npm run compile",
    "clean:all": "npm run clean:lib && npm run clean:extras && rm -rf node_modules",
    "clean:extras": "rm -rf logs .nyc_output coverage documentation",
    "clean:lib": "rm -rf ./lib/startup/bootstrap/controllers/default/defaultHtml && find ./lib -type f -name '*.js' -delete && find ./lib -type f -name '*.js.map' -delete && find ./lib -type f -name '*.ts' -delete && rm -f ./lib/core/tslint.json",
    "compile": "npm run tslint && npm run copy && tsc",
    "copy": "npm run copy:defaults && npm run copy:tslint",
    "copy:defaults": "cp -R ./src/startup/bootstrap/controllers/default/defaultHtml ./lib/startup/bootstrap/controllers/default",
    "copy:tslint": "cp ./src/core/tslint.json ./lib/core",
    "doc": "typedoc --tsconfig tsconfig.json --name @YGGDRASIL --out documentation --mode modules src",
    "lerna:publish": "lerna publish",
    "lerna:publish:canary": "lerna publish --canary=alpha --yes",
    "publish": "npm run build && npm run lerna:publish:canary",
    "test": "rm -rf coverage .nyc_output && npm run tslint:test && nyc --require ts-node/register mocha src/**/**/*.spec.ts",
    "tslint": "tslint -p tsconfig.json -c ./src/core/tslint.json -t verbose",
    "tslint:test": "tslint -p tsconfig.spec.json -c ./src/core/tslint.json -t verbose"
  },
  "dependencies": {
    "app-root-path": "^2.0.1",
    "chalk": "^2.3.0",
    "class-validator": "^0.8.1",
    "compression": "^1.7.1",
    "connect-mongo": "^2.0.1",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-flash": "0.0.2",
    "express-list-routes": "^0.1.4",
    "express-session": "^1.15.6",
    "figlet": "^1.2.0",
    "lusca": "^1.5.2",
    "moment": "^2.20.1",
    "mongoose": "^5.0.1",
    "morgan": "^1.9.0",
    "node-sass-middleware": "^0.11.0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1",
    "q": "^1.5.1",
    "require-env": "^0.2.1",
    "rotating-file-stream": "^1.3.4",
    "typeorm": "^0.1.11",
    "uuid": "^3.2.1",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.11.0",
    "@types/express-session": "^1.15.6",
    "@types/mocha": "^2.2.47",
    "@types/mongoose": "^5.0.0",
    "@types/node": "^9.4.0",
    "@types/uuid": "^3.4.3",
    "@types/winston": "^2.3.7",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-sass": "^3.1.0",
    "gulp-tslint": "^8.1.2",
    "gulp-typescript": "^3.2.4",
    "gulpclass": "^0.1.2",
    "lerna": "^2.8.0",
    "mocha": "^5.0.0",
    "mocha-typescript": "^1.1.12",
    "nyc": "^11.4.1",
    "source-map-support": "^0.5.3",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typedoc": "^0.9.0",
    "typescript": "^2.6.2"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/index.ts",
      "**/*.spec.ts",
      "**/*.d.ts",
      "samples"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true
  }
}
