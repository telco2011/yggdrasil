{
	"compilerOptions": {
		"allowJs": false,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"noImplicitAny": false,
		"noLib": false,
		"noUnusedLocals": false,
		"outDir": "./lib",
		"removeComments": false,
		"rootDir": "./src",
		"sourceMap": false,
		"target": "es6"
	},
	"exclude": [
		"**/*.spec.ts",
		"src/devs/**/*"
	],
	"include": [
		"*.ts",
		"**/*.ts"
	]
}