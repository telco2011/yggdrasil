{
  "name": "0-basic",
  "version": "1.0.0",
  "description": "Basic application built using @yggdrasil architecture.",
  "scripts": {
    "clean": "rm -rf dist logs",
    "clean:all": "npm run clean && rm -rf node_modules",
    "compile": "npm run clean && npm run tslint && tsc -p tsconfig.json",
    "compile:watch": "npm run tslint && tsc -w -p tsconfig.json",
    "compile:test": "npm run clean && npm run tslint && tsc -p tsconfig.spec.json",
    "tslint": "tslint src/**/*.ts -t verbose",
    "start": "npm run start:dev",
    "start:dev": "npm run compile && concurrently -c grey,blue -n compile,nodemon \"npm run compile:watch\" \"nodemon dist/ignition.js\"",
    "test": "npm run compile:test && mocha --exit dist/test/**/*.spec.js"
  },
  "author": "David Lopez",
  "license": "MIT",
  "devDependencies": {
    "@yggdrasil/testing": "^0.1.0-alpha.1",
    "concurrently": "^3.5.1",
    "nodemon": "^1.14.11",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "@yggdrasil/logger": "^0.1.0-alpha.1",
    "@yggdrasil/mvc": "^0.1.0-alpha.1",
    "@yggdrasil/startup": "^0.1.0-alpha.1"
  }
}
